@page
@using IsikUn.IncubationCentre.Localization
@using IsikUn.IncubationCentre.Permissions
@using IsikUn.IncubationCentre.Web.Pages.Investors
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model EditModalModel
@inject IStringLocalizer<IncubationCentreResource> L
@{
    Layout = null;
}

<form asp-page="/Investors/EditModal">
    <abp-modal>
        <abp-modal-header title="@L["NewInvestor"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Id" />
            <abp-input asp-for="Investor.IdentityUserId" type="hidden" />
            <abp-input asp-for="Investor.About" />
            <abp-select asp-for="Investor.SkillIds" asp-items="Model.Skills" />
            <abp-input asp-for="Investor.Experience" />
            <abp-input asp-for="Investor.isActivated" type="hidden" />
            <abp-input asp-for="Investor.CreationTime" type="hidden"/>

        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
