@page
@using IsikUn.IncubationCentre.Localization
@using IsikUn.IncubationCentre.Permissions
@using IsikUn.IncubationCentre.Web.Pages.Collaborators
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model CreateModalModel
@inject IStringLocalizer<IncubationCentreResource> L
@{
    Layout = null;
}

<form asp-page="/Collaborators/CreateModal">
    <abp-modal>
        <abp-modal-header title="@L["NewCollaborator"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-select asp-for="Collaborator.IdentityUserId" asp-items="Model.Users"/>
            <abp-input asp-for="Collaborator.About" />
            <abp-select asp-for="Collaborator.SkillIds" asp-items="Model.Skills"/>
            <abp-input asp-for="Collaborator.Experience" />
            <abp-input asp-for="Collaborator.isActivated" />
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</form>
